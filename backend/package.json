{
  "name": "holded-analysis-backend",
  "version": "1.0.0",
  "description": "Backend API for Holded Analysis Platform - ERP Integration System",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "nodemon --experimental-specifier-resolution=node src/server.js",
    "start": "node --experimental-specifier-resolution=node src/server.js",
    "test": "NODE_ENV=test vitest",
    "test:ui": "NODE_ENV=test vitest --ui",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "test:e2e": "NODE_ENV=test playwright test",
    "lint": "eslint src --ext .js,.mjs",
    "lint:fix": "eslint src --ext .js,.mjs --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "security:check": "snyk test",
    "build": "esbuild src/server.js --bundle --platform=node --outfile=dist/server.js --external:./node_modules/*",
    "docker:build": "docker build -t holded-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env holded-backend"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "mongoose": "^8.3.2",
    "redis": "^4.6.13",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "axios": "^1.7.2",
    "node-cron": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/sdk-node": "^0.51.1",
    "@opentelemetry/auto-instrumentations-node": "^0.46.1",
    "@opentelemetry/exporter-prometheus": "^0.51.1",
    "prom-client": "^15.1.2",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.15",
    "hpp": "^0.2.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.4",
    "joi": "^17.13.1",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.11",
    "uuid": "^9.0.1",
    "bull": "^4.12.9",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.13",
    "@sentry/node": "^8.7.0",
    "@sentry/profiling-node": "^8.7.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "vitest": "^1.6.0",
    "@playwright/test": "^1.44.1",
    "nodemon": "^3.1.0",
    "eslint": "^9.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^3.0.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "@faker-js/faker": "^8.4.1",
    "mongodb-memory-server": "^9.2.0",
    "snyk": "^1.1291.0",
    "esbuild": "^0.21.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2"
  },
  "keywords": [
    "holded",
    "erp",
    "api",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "redis"
  ],
  "author": "Holded Analysis Team",
  "license": "MIT"
}